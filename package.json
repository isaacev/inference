{
  "scripts": {
    "clean": "rimraf .cache dist",
    "build": "npm run grammar && parcel build --out-file index.html --public-url ./ index.html",
    "slides": "cp docs/slides.html dist",
    "check": "tsc --noEmit",
    "fmt": "prettier --write src/*.ts src/*.js src/**/*.{ts,tsx}",
    "grammar": "pegjs -o src/parser/grammar/index.js --format umd src/parser/grammar/grammar.pegjs",
    "deploy": "npm run clean && npm run build && npm run slides && gh-pages -d dist",
    "start": "parcel --no-hmr --no-cache ./src/index.html"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-pro": "^5.4.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.6",
    "@fortawesome/free-solid-svg-icons": "^5.4.1",
    "@fortawesome/pro-regular-svg-icons": "^5.4.1",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "@types/classnames": "^2.2.6",
    "@types/codemirror": "0.0.63",
    "@types/node": "^10.11.2",
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.9",
    "classnames": "^2.2.6",
    "gh-pages": "^2.0.1",
    "node-sass": "^4.9.3",
    "parcel-bundler": "^1.11.0",
    "pegjs": "^0.10.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "codemirror": "^5.40.2",
    "localforage": "^1.7.2",
    "react": "^16.5.2",
    "react-codemirror2": "^5.1.0",
    "react-dom": "^16.5.2"
  }
}
